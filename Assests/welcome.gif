<svg viewBox="0 0 500 70" xmlns="http://www.w3.org/2000/svg">
    <style>
        .text {
            font-family: 'Righteous', sans-serif;
            font-size: 35px;
            fill: black;
            white-space: pre;
        }
        .cursor {
            font-family: 'Righteous', sans-serif;
            font-size: 35px;
            fill: black;
            animation: blink 1s steps(2, start) infinite;
        }
        @keyframes typewriter {
            from { width: 0; }
            to { width: 100%; }
        }
        @keyframes blink {
            to { opacity: 0; }
        }
        #text {
            overflow: hidden;
            border-right: .15em solid black;
            white-space: nowrap;
            margin: 0 auto;
            letter-spacing: .15em;
            animation: typewriter 4s steps(40, end), blink-caret .75s step-end infinite;
        }
    </style>
    <rect width="100%" height="100%" fill="white"/>
    <text x="50%" y="50%" text-anchor="middle" alignment-baseline="middle" id="text" class="text">Welcome to my GitHub Profile!</text>
</svg>
